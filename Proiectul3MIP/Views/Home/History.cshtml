@using Models;
@model List<HistoryOrder>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Nr.Crt.</th>
            <th scope="col">Order Number</th>
            <th scope="col">Produs Name</th>
            <th scope="col">Quantity</th>
            <th scope="col">Unit</th>
            <th scope="col">Price</th>
            <th scope="col">Total</th>
        </tr>
    </thead>
    <tbody>
        @{
            var i = 1;
            foreach(var orderHistory in Model)
            {
                <tr>
                    <th scope="row">@i</th>
                    <td>@orderHistory.OrderNumber</td>
                    <td>@orderHistory.Produs.Name.</td>
                    <td>@orderHistory.Quantity</td>
                    <td>@orderHistory.Produs.Unit.Type</td>
                    <td>@orderHistory.Price</td>
                    <td>@orderHistory.Total</td>
                </tr>
                i++;
            }
        }
    </tbody>
</table>